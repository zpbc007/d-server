{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"],
      "@module-front/*": ["module/frontend/*"],
      "@module-back/*": ["module/backend/*"],
      "@type-comp/*": ["type/component/*"],
      "@interceptor/*": ["interceptors/*"],
      "@transformer/*": ["transformers/*"],
      "@exception-filter/*": ["exception-filters/*"],
      "@module-ding/*": ["module/ding/*"]
    }
  },
  "exclude": ["node_modules"]
}
